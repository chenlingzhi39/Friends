<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/primary</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="backgroundColor">@color/background_color</item>
        <item name="android:actionMenuTextAppearance">@style/ToolbarTitleAppearance</item>
    </style>
<style name="BaseAppNightTheme" parent="Theme.AppCompat.NoActionBar">
    <item name="colorPrimary">@color/primary_night</item>
    <item name="colorPrimaryDark">@color/primary_dark_night</item>
    <item name="colorAccent">@color/primary</item>
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
    <item name="backgroundColor">@color/background_color_night</item>
    <item name="android:actionMenuTextAppearance">@style/ToolbarTitleAppearance</item>

</style>

    <style name="BaseAppTheme.AppTheme" >
        <!-- Customize your theme here. -->

    </style>
    <style name="BaseAppNightTheme.AppNightTheme" >
        <!-- Customize your theme here. -->

    </style>
    <style name="TransparentTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="windowActionBar">false</item>
        <item name="android:actionMenuTextAppearance">@style/ToolbarTitleAppearance</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    </style>

    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <!--  <item name="android:windowExitAnimation">@anim/push_bottom_out</item> -->
    </style>

    <style name="MyDialogStyleBottom" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowAnimationStyle">@style/AnimBottom</item>
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
    </style>
    <style name="myDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
         <item name="dark">true</item>
    </style>

    <style name="Slider">
        <item name="thickness">2dp</item>
        <item name="radius">6dp</item>
        <item name="color">?attr/colorPrimary</item>
        <item name="textColor">@android:color/white</item>
        <item name="textSize">12sp</item>
        <item name="dark">?attr/dark</item>
    </style>
</resources>