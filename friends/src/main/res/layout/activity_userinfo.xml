<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.example.widget.ObservableScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:scaleType="centerCrop"
                android:src="@drawable/background"
                android:id="@+id/image"
                />
            <Button
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:background="@drawable/bg_edit"
                android:text="编辑"
                android:textColor="#ffffff"
                android:layout_alignParentRight="true"
                android:layout_marginTop="80dp"
                android:layout_marginRight="20dp"
                android:padding="0dp"
                android:id="@+id/edit"
                android:clickable="false"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_status"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@mipmap/ic_launcher"
                app:border_color="@android:color/white"
                app:border_width="2dp"
                app:layout_behavior="saulmm.myapplication.AvatarImageBehavior"
                android:layout_centerInParent="true"
                android:id="@+id/head"
                android:layout_above="@+id/buttons"
                android:layout_marginBottom="50dp"
                android:layout_marginLeft="20dp"
                android:layout_alignParentLeft="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户名"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:layout_toRightOf="@+id/head"
                android:layout_alignTop="@+id/head"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:id="@+id/user_name"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                 android:layout_alignBottom="@+id/image"
                android:background="#77000000"
                android:id="@+id/buttons">
            <LinearLayout
                android:id="@+id/btn_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="5dp"
                android:background="?attr/selectableItemBackground">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="动态"
                    android:textColor="#aaffffff"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/post_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#ffffff"
                    android:textSize="15sp"
                    android:textStyle="bold"/>
            </LinearLayout>
                <LinearLayout
                    android:id="@+id/btn_focus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:background="?attr/selectableItemBackground"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="关注"
                        android:textColor="#aaffffff"
                        android:textSize="15sp" />
                    <TextView
                        android:id="@+id/focus_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#ffffff"
                        android:textSize="15sp"
                        android:textStyle="bold"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/btn_fans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:background="?attr/selectableItemBackground"
                  >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="粉丝"
                        android:textColor="#aaffffff"
                        android:textSize="15sp" />
                    <TextView
                        android:id="@+id/fans_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#ffffff"
                        android:textSize="15sp"
                        android:textStyle="bold"/>
                </LinearLayout>

            </LinearLayout>
            <View
                android:layout_below="@+id/buttons"
                android:layout_width="match_parent"
                android:layout_height="640dp"
                android:background="#0000ff"/>
        </RelativeLayout>
    </com.example.widget.ObservableScrollView>
    <com.example.widget.AlphaView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/toolbar_background"


        />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:background="@android:color/transparent"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"

        />


</RelativeLayout>