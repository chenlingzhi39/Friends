<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/material_blue_500</item>
        <item name="colorPrimaryDark">@color/material_blue_500</item>
        <item name="colorAccent">@color/material_blue_500</item>
        <item name="windowActionBar">false</item>
        <item name="android:actionMenuTextAppearance">@style/ToolbarTitleAppearance</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppNightTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#000000</item>
        <item name="colorPrimaryDark">#212121</item>
        <item name="colorAccent">#ffffff</item>
        <item name="windowActionBar">false</item>
        <item name="android:actionMenuTextAppearance">@style/ToolbarTitleAppearance</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="MainTheme" parent="AppTheme">

        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
      <!--  <item name="android:statusBarColor">@android:color/transparent</item>-->

       <!-- <item name="android:windowTranslucentStatus">true</item>-->
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowContentTransitions">true</item>

        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>

    </style>
    <style name="TransparentTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="windowActionBar">false</item>
        <item name="android:actionMenuTextAppearance">@style/ToolbarTitleAppearance</item>

        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    </style>
    <style name="ToolbarTitleAppearance">
        <item name="android:textSize">20sp</item>
        <!--<item name="android:textStyle">normal</item>-->

    </style>
</resources>